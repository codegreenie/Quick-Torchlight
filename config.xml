<?xml version='1.0' encoding='utf-8'?>
<widget id="com.codegreenie.torchlightfree" version="1.2.8" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Torchlight Free</name>
    <description>
       Free torchlight app for your phone
    </description>
    <author email="codegreenie@gmail.com" href="https://twitter.com/codegreenie">
        @codegreenie
    </author>
    <content src="index.html" />
    <icon src="icon.png" />
    <preference name="StatusBarBackgroundColor" value="#04081d" />
    <preference name="orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="phonegap-version" value="cli-9.0.0" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <engine name="browser" spec="~5.0.4" />
    <engine name="android" spec="~7.1.4" />
    <engine name="ios" spec="^4.5.5" />
    <plugin name="cordova-plugin-media-capture" spec="~1.4.3" />
    <plugin name="cordova-plugin-device" spec="~1.1.6" />
    <plugin name="cordova-plugin-dialogs" spec="~1.3.3" />
    <plugin name="cordova-plugin-file" spec="~4.3.3" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.4" />
    <plugin name="cordova-plugin-x-socialsharing" spec="5.4.7">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="24.1.1+" />
        <variable name="PHOTO_LIBRARY_ADD_USAGE_DESCRIPTION" value="This app requires photo library access to function properly." />
        <variable name="PHOTO_LIBRARY_USAGE_DESCRIPTION" value="This app requires photo library access to function properly." />
    </plugin>
    <plugin name="cordova-plugin-statusbar" spec="2.4.3" />
    <plugin name="cordova-plugin-vibration" spec="~2.1.5" />
    <plugin name="cordova-plugin-battery-status" spec="2.0.3" />
    <plugin name="cordova-plugin-flashlight" spec="3.2.0" />
    <plugin name="cordova-plugin-admobpro">
        <variable name="PLAY_SERVICES_VERSION" value="16.0.0" />
        <variable name="ADMOB_APP_ID" value="ca-app-pub-8716485588609849~1319077374" />
    </plugin>
</widget>
